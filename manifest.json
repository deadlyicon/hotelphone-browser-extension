{
  "manifest_version": 2,
  "name": "Hotelphone",
  "version": "0.1",
  "description": "loading data for Hotelphone",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage"
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  // "browser_action": {
  //   // "default_icon": "icon.png",
  // },
  "content_scripts": [
    {
      "matches": [
        "https://m.facebook.com/*"
      ],
      "js": ["facebook.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
